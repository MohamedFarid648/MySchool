@model IEnumerable<MySchoolV1.Models.Answer>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RightAnswer)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RightAnswer)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit","Answers", new { id=item.ID },"") |
            @Html.ActionLink("Details","Details", "Answers", new { id=item.ID },"") |
            @Html.ActionLink("Delete", "Delete", "Answers", new { id=item.ID },"")
        </td>
    </tr>
}

</table>
